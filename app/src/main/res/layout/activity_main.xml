<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp"
    sothree:umanoScrollableView="@+id/scrollView"
    layout_height="match_parent">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="nldr.spamoff.MainActivity"
        android:padding="0dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אני מאשר שקראתי את הכתוב למעלה"
            android:id="@+id/chkAcceptTerms"
            android:layout_gravity="center_vertical"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layoutDirection="rtl"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="15dp"
            android:buttonTint="#000000"
            android:checked="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/terms"
            android:id="@+id/txtTerms"
            android:layoutDirection="rtl"
            android:layout_marginRight="7dp"
            android:textColor="#000000"
            android:layout_above="@+id/chkAcceptTerms"
            android:layout_alignEnd="@+id/chkAcceptTerms" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_vertical|center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrowsTop"
                android:src="@drawable/arrows1"
                android:scaleType="fitStart"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/seekBarSpamOff"
                />

            <SeekBar
                android:id="@+id/seekBarSpamOff"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:cropToPadding="false"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:max="200"
                android:progressDrawable="@drawable/scrubber_control_progress"
                android:thumb="@drawable/scrubber_control"
                android:splitTrack="false"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/arrowsBot"
                android:src="@drawable/arrows1"
                android:scaleType="fitStart"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/seekBarSpamOff"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="לצפיה בתוצאות הסריקה האחרונות"
                android:id="@+id/btnLastScan"
                android:background="#e42828"
                android:textColor="#ffffff"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/arrowsBot"
                android:layout_centerHorizontal="true" />
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fbutton="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="nldr.spamoff.MainActivity"
        android:padding="0dp">

        <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<me.relex.circleindicator.CircleIndicator-->
                <!--android:id="@+id/indicator"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="48dp"/>-->

            <nldr.spamoff.NestingViewPager
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


        <!--<com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/circlePageIndicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fillColor="@color/colorPrimary"
            app:strokeColor="@color/lightGrey"/>-->


        <!--</LinearLayout>-->

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>


