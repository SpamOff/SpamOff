<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nldr.spamoff.whyFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/infoLayout"
        android:weightSum="1">

        <FrameLayout
            android:id="@+id/slidingPanelHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fbutton_color_nephritis">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="למה"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:id="@+id/txtHeader"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:clickable="false"
                android:contextClickable="false"
                android:gravity="center|center_horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textAlignment="gravity"
                android:textIsSelectable="false"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:linksClickable="false" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView7"
                android:cropToPadding="false"
                android:scaleType="matrix"
                android:layout_alignParentStart="true"
                android:src="@drawable/slideup"
                android:layout_gravity="left|center_vertical" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView8"
                android:src="@drawable/navarrowleft"
                android:scaleType="centerInside"
                android:layout_gravity="right"
                android:layout_column="0"
                android:layout_row="0" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:weightSum="1"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_toStartOf="@+id/imageView13"
                android:layout_toEndOf="@+id/imageView8"
                android:id="@+id/linearLayout">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView11"
                    android:src="@drawable/question"
                    android:cropToPadding="false"
                    android:layout_marginRight="-10dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="centerInside"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/why"
                    android:id="@+id/textView4"
                    android:textDirection="rtl"
                    android:textSize="18dp"
                    android:autoText="false"
                    android:layout_marginTop="10dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:id="@+id/imageView13"
                android:src="@drawable/navarrow"
                android:scaleType="centerInside"
                android:layout_column="2"
                android:layout_row="0"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
