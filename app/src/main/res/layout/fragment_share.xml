<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nldr.spamoff.ShareFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="עזרו לנו להפיץ את הבשורה בשביל עתיד שקט יותר"
        android:id="@+id/textView13"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/greenPrimary"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShare"
        android:layout_below="@+id/textView13"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/share"
        android:scaleType="centerInside"
        android:layout_marginTop="10dp"
        android:background="@drawable/md_transparent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="שאלות נוספות?"
        android:id="@+id/textView14"
        android:layout_gravity="center_horizontal"
        android:textSize="18dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textAlignment="center"
        android:layout_below="@+id/btnShare"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSite"
            android:src="@mipmap/moreinfo8"
            android:padding="8dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_transparent"/>

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="@color/seperator"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMail"
            android:src="@mipmap/moreinfo9"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="8dp"
            android:background="@drawable/background_transparent"/>

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="@color/seperator"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnFaq"
            android:src="@mipmap/moreinfo10"
            android:padding="8dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_transparent"/>
    </LinearLayout>
</RelativeLayout>
